*
	margin: 0
	padding: 0
	border: 0
	box-sizing border-box

html
	background: url(../img/bg.jpg) black
	height: 100%

body
	font-weight: 300
	font-size: 12px
	line-height: 1.3
	font-family: "Arial", sans-serif
	color: gray(200, 1)
	width: 960px
	margin: 0 auto 0 auto
	height: 100%
	text-align: center

.hidden
	display: none !important

.wrapper
	display: none

.visible
	display: inherit !important

#home
	font-weight: 100
	font-size: 24px
	line-height: 50px
	font-family: "Play", sans-serif
	&:hover
		background-image linear-gradient(rgb(0, 140, 255), rgb(0, 40, 230))
		color: gray(255)
		text-shadow: 0 0 2px black
		border-radius: 0 0 0 10px

#stopwatchDisplay,
#digitalclock
	text-align: center
	vertical-align: middle
	font-weight: 500
	font-size: 180px
	font-family: "Play", sans-serif
	color: gray(230)
	text-shadow: 2px 2px 2px rgb(0, 0, 0)
	border-radius: 10px
	margin-bottom: 40px

h3
	display: inline-block
	text-align: center
	vertical-align: middle
	font-weight: 500
	font-size: 50px
	font-family: "Play", sans-serif
	color: gray(200)
	text-shadow: 2px 2px 2px rgb(0, 0, 0)
	text-decoration: none
	margin: 0 20px

h4
	display: inline-block
	text-align: center
	font: 500 20px/50px "Play", sans-serif
	color: rgba(200, 200, 200, 1)
	text-shadow: 1px 1px 4px rgb(0, 0, 0)
	text-decoration: none
	margin: 50px 0 0 0

em
	display: inline-block
	text-align: center
	vertical-align: middle
	font-weight: 400
	font-size: 50px
	font-family: "Pacifico", serif
	font-style: italic
	color: rgba(220, 220, 220, 1)
	text-shadow: 2px 2px 2px rgb(0, 0, 0)
	text-decoration: none
	margin: 0 20px 0 20px


#stopwatchcontrols button,
#timercontrols button,
#timers button,
#startCountdown,
#countdowns button
	font-family: "Play", sans-serif
	display: inline-block
	text-align: center
	vertical-align: middle
	position: relative
	background-image linear-gradient(rgba(40, 40, 40, 1), rgba(20, 20, 20, 1))
	border: 2px solid rgb(10,10,10)
	text-shadow: 0 -2px black
	color: rgb(200, 200, 200)
	box-shadow: inset 0 1px 1px rgba(255,255,255,0.1)
	border-radius: 8px
	&:hover
		background-image linear-gradient(rgba(20, 20, 20, 1), rgba(0, 0, 0, 1))
	&:active
		background-image linear-gradient(rgba(10, 10,10, 1), rgba(20, 20, 20, 1))


input
	&[type="time"],
	&[type="text"],
	&[type="date"]
		border-radius: 5px
		color: gray(230)
		display: inline-block
		font-size: 50px
		font-weight: 500
		font-family: "Play", sans-serif
		line-height: 70px
		padding: 0 30px
		text-shadow: 2px 2px 1px gray(30)
